<% flash.each do |key, value| %>

  <% key == 'alert' ? key = 'danger' : key = 'success' %>

  <div class="alert alert-<%= key %> alert-dismissable">
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <%= value %>
        </div>
      </div>
    </div>
  </div>

<% end %>
