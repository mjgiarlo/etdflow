<div class="row">
  <div class="col-xs-12">
    <h1 id="format-review-files-heading">Format Review Files</h1>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <% if @submission.format_review_notes.present? %>
        <div id="format-review-notes" class="row">
          <div class="col-xs-12">
            <h5>Format Review notes from the administrator</h5>
            <div class="alert alert-<%= @submission.beyond_waiting_for_format_review_response? ? 'info' : 'warning'  %>">
              <p><%= @submission.format_review_notes %></p>
            </div>
          </div>
        </div>
    <% end %>
    <%= @submission.title %>
    <% @submission.format_review_files.each do |file| %>
      <div id="format-review-file-<%=file.id%>">
        <%= link_to file.filename_identifier, file.filename_url, class: 'file-link', target: '_blank' %>
      </div>
    <% end %>
  </div>
</div>
