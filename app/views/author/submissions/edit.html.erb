<div class="row">
  <div class="col-xs-12 col-sm-9">
    <h1>Update Program Information</h1>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <%= simple_form_for [:author, @submission] do |form| %>

      <%= render partial: "form_fields", locals: { form: form } %>

      <div class="form-group actions">
        <%= form.button :submit, class: "btn-primary", value: "Update Program Information" %>
        <%= link_to "Cancel", author_root_path %>
      </div>
    <% end %>
  </div>
</div>
