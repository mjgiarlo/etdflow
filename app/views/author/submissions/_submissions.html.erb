<div class="row">
  <div class="col-xs-12">
    <h2>My Submissions</h2>
  </div>
</div>

<div id="submissions" class="row">

  <% @view.submissions.each do |submission| %>
    <% @submission_view = SubmissionView.new submission %>

    <div id="submission-<%= submission.id %>" class="col-xs-12 submission">

      <div class="heading">
        <h3><%= submission.title %></h3>

        <div class="help-block"><%= @submission_view.formatted_program_information %>
          <%= @submission_view.delete_link %>
        </div>
      </div>

      <%= render 'progress_indicator', submission: submission %>

    </div>
  <% end %>

  <div class="col-xs-12 submission">
    <p><%= link_to "Start a new Submission", new_author_submission_path, class: 'btn btn-primary' %></p>
  </div>

</div>
