<div class="modal" id="CommitteeSearchModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
        <h1 class="modal-title" id="myModalLabel">Penn State Directory Search for <span class="this-role"> </span></h1>
      </div>
       <%# @committee_member = @committee_members[0] %>
      <%# @committee.inspect %>
      <div class="modal-body">
        <% @ldap_lookup_info = LdapLookup.new %>
        <%= simple_form_for(@ldap_lookup_info, remote: true, method: :get, url: url_for(action: 'ldap_lookups', controller: '/ldap_lookup')) do |f| %>
              <%= f.input :uid, label: 'Please specify either a single Access Account User ID or a single last name and click Search.' %>
              <%= f.hidden_field  :role %>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              <%= f.button :submit, "Look Up Committee Member", class:"btn btn-primary committee_search_submit", remote: true, method: :get %>
            </div>
        <% end %>
       </div>
       <div class="modal-footer">
         <div class="search_results">  </div>
       </div>
     </div>
    </div>
</div>