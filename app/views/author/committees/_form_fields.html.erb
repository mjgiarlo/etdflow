<%= form.simple_fields_for :committee_members do |cmf| %>
  <fieldset class="committee-member-fields">
    <%= cmf.input :submission_id, as: :hidden %>
    <%= cmf.input :is_advisor, as: :hidden %>
    <%= cmf.input :role, as: :hidden %>
    <div class="row ">
      <div class="col-xs-12">
        <label class="role-label"><%= cmf.object.role %></label>
      </div>
      <div class="col-xs-12 col-sm-6">
        <%= cmf.input :name, label: 'Name' %>
      </div>
      <div class="col-xs-12 col-sm-6">
        <%= cmf.input :email, label: 'Email' %>
      </div>
    </div>
  </fieldset>
<% end %>
