<!DOCTYPE html>
<html>
<head>
  <title>ETD Flow Admin</title>
  <%= stylesheet_link_tag    'base', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'admin', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'base', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'admin', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="container-fluid">

    <div class="row">
      <header>
        <div class="header-image">
          <%= image_tag 'https://etda.libraries.psu.edu/media/img/grad.png', class: 'img-responsive center-block' %>
        </div>

        <nav id="account-navigation" class="navbar navbar-default" role="navigation">
          <div class="col-xs-12">
            <div class="container-fluid">
              <button type="button" class="navbar-toggle pull-left" data-toggle="collapse" data-target="#main-navigation">
                <span class="sr-only">Toggle Navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <div class="pull-right">
                <span class="navbar-text small">Logged in as Joe Example</span>
                <button type="button" class="btn btn-default btn-sm navbar-btn">Log Out</button>
              </div>
            </div><!-- /.container-fluid -->
          </div><!-- /.col-* -->
        </nav>
      </header>
    </div><!-- /.row -->


    <%= yield %>


    <div class="row">
      <footer>
        <nav id="courtesy-navigation" class="navbar navbar-default" role="navigation">
          <div class="col-xs-12 col-md-offset-3 col-md-9">
            <ul class="nav navbar-nav">
              <li><%= link_to 'DLT Service Desk', '#', class: 'small', target: 'blank' %></li>
              <li><%= link_to 'eTDA', 'http://www.gradschool.psu.edu/index.cfm/current-students/etd/', class: 'small', target: '_blank' %></li>
              <li><%= link_to "Â© #{Time.now.year} The Pennsylvania State University", 'http://www.psu.edu/ur/copyright.html', class: 'small', target: '_blank' %></li>
              <li><%= link_to 'Privacy and Legal Statements', 'http://www.psu.edu/ur/legal.html', class: 'small', target: '_blank' %></li>
            </ul>
          </div>
        </nav>
      </footer>
    </div>

  </div>

</body>
</html>
