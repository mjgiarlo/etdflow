<div class="modal" id="CommitteeSearchModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close committee-modal-close" data-dismiss="modal" aria-hidden="true">X</button>
        <h1 class="modal-title" id="myModalLabel">Penn State Directory Search for Committee Members</h1>
      </div>

      <div class="modal-body">
        <div class="modal-errors"> </div>

        <div class="search-results">
        </div>
        <div class="search-box">
            <%= render  'ldap_lookup/search_form', locals: {ldap_lookup_info: @ldap_lookup_info} %>
        </div>

      </div>
    </div>
  </div>
</div>