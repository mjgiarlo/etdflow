<div class="row">
  <div class="col-xs-12 col-sm-9">
    <h1>Degrees</h1>
  </div>
  <div class="col-xs-12 col-sm-3">
    <%= link_to "<span class='glyphicon glyphicon-plus'></span> Add a New Degree".html_safe, new_admin_degree_path, class: 'btn btn-default add-button pull-right' %>
  </div>
</div>

<table id="degrees-index" class="table table-bordered table-striped table-responsive datatable" data-ajax-url="<%= admin_degrees_path %>">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Degree Type</th>
      <th>Active?</th>
    </tr>
  </thead>
</table>
